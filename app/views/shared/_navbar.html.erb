<div class="navbar-wagon">
  <!-- Logo -->

    <div class="navbar-wagon-left">
      <%= image_tag "cocktail.png", height: 50 %>
      <div class="form-group">
        <%= form_tag cocktails_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control form_input", placeholder: "Find a cocktail" %>
        <%#= submit_tag "Search", class: "" %>
        <% end %>
      </div>
    </div>



  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <a href=<%= cocktails_path %> class="navbar-wagon-item navbar-wagon-link">Cocktails</a>
    <a href="" class="navbar-wagon-item navbar-wagon-link">Cocktail of the day</a>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="https://avatars1.githubusercontent.com/u/40575245?v=4" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li> <%= link_to "Profile", edit_user_registration_path(current_user) %> </li>
          <% if current_user %>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Host</a></li>
        <li><a href="#">Trips</a></li>
        <li><a href="#">Messagese</a></li>
      </ul>
    </div>
  </div>
</div>
